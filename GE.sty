
\ProvidesPackage{GE}[2013/12/05]

\usepackage{amsmath,amssymb}

\usefonttheme{professionalfonts} % 数式はセリフ体
\AtBeginShipoutFirst{\special{pdf:tounicode EUC-UCS2}}
\setbeamertemplate{navigation symbols}{}

\usepackage{tikz}
\usetikzlibrary{backgrounds}
%% スライドのデザインの設定 %%%
% テーマの設定(とりあえずdefault)
\usetheme{default}
\usecolortheme{default}
\useoutertheme{default}
\useinnertheme{default}

% I referred http://www.colourlovers.com/palette/3259579/Interior-cleanwarm?widths=1
\definecolor{fontc}{RGB}{111,93,100}
\definecolor{bgc}{RGB}{223,223,220}
\definecolor{sub2}{RGB}{246,234,205}
\definecolor{sub1}{RGB}{181,146,110}
\definecolor{base}{RGB}{157,90,62}

% normal font setting
\setbeamercolor{structure}{fg=base}
\setbeamercolor{normal text}{fg=fontc}
\setbeamerfont{normal text}{size=\LARGE}
% background color
\setbeamercolor{background canvas}{bg=bgc}

% serif only math
\usefonttheme[onlymath]{serif}

% title page
\setbeamercolor{author}{fg=base}
\setbeamercolor{title page}{fg=base}
\setbeamerfont{title page}{size=\large}
\setbeamerfont{author}{size=\footnotesize}

\setbeamertemplate{title page}{%
  \begin{center}
    \vspace{.2\textheight}
    \inserttitle
    
    \vspace{.01\textheight}    
    {\small \insertdate}

    \insertsubtitle
    \vspace{.1\textheight}
    {\small \insertauthor}
  \end{center}
}

\setbeamerfont{footline}{size=\normalsize}
\setbeamertemplate{footline}{
  \leavevmode%
  \hbox{%
    \begin{beamercolorbox}[wd=.4\textwidth,ht=3ex,dp=1ex,left]{}%
    \end{beamercolorbox}%
    \begin{beamercolorbox}[wd=.2\textwidth,ht=3ex,dp=1ex,center]{}%
    \end{beamercolorbox}%
    \begin{beamercolorbox}[wd=.4\textwidth,ht=3ex,dp=1ex,right]{base}
      \insertframenumber{}/\inserttotalframenumber \hspace*{2ex} 
    \end{beamercolorbox}%
  }%
  \vskip0pt%
}

% frame title
\setbeamerfont{frametitle}{size=\large}
\setbeamercolor{framesection}{fg=base}
\setbeamertemplate{frametitle}{{
  \vspace*{5pt}
  \leavevmode%
  \hbox{%
    \begin{beamercolorbox}[leftskip=-1pt, ht=3ex]{framesection}
      \insertframetitle
    \end{beamercolorbox}
  }
  \vskip0pt%
}}

\setbeamercolor{item}{fg=base}

% background setting
\setbeamertemplate{background canvas}{%
\begin{tikzpicture}[background rectangle/.style={fill=bgc},show background rectangle] 
    \clip (0,0) rectangle (\paperwidth,\paperheight);
    \fill[color=fontc] (22pt, 0) rectangle (0, \paperheight);
    \fill[color=sub2] (19pt, 0) rectangle (0, \paperheight);
    \fill[color=sub1] (9pt, 0) rectangle (0, \paperheight);
    \fill[color=base] (3pt, 0) rectangle (0, \paperheight);
\end{tikzpicture}}

% normal block setting
\addtobeamertemplate{block begin}{%
\leftskip=5pt
}{}
\setbeamercolor{block title}{use=structure,fg=white,bg=fontc}
\setbeamercolor{block body}{use=structure,fg=fontc,bg=sub2!20!white}
% alert block setting
\addtobeamertemplate{block alerted begin}{%
\leftskip=5pt
}{}
\setbeamercolor{block title alerted}{use=structure,fg=white,bg=sub2!50!red}
\setbeamercolor{block body alerted}{use=structure,fg=fontc,bg=sub2!20!white}

\addtobeamertemplate{block example begin}{%
\leftskip=5pt
}{}
\setbeamercolor{block title example}{fg=fontc}
\setbeamercolor{block body example}{use=structure,fg=fontc,bg=sub1!50!white}
